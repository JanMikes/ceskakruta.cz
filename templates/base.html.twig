<!DOCTYPE html>
<html lang="cs">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %} | Česká Krůta</title>

        <meta name="viewport" content="width=device-width, initial-scale=1">

        <meta name="description" content="">
        <meta name="keywords" content="">

        <link rel="apple-touch-icon" sizes="180x180" href="">
        <link rel="icon" type="image/png" sizes="32x32" href="">
        <link rel="icon" type="image/png" sizes="16x16" href="">
        <link rel="mask-icon" color="#fe6a6a" href="">

        <link rel="manifest" href="{{ asset('site.webmanifest') }}">
        <meta name="msapplication-TileColor" content="#ffffff">
        <meta name="theme-color" content="#ffffff">

        <!-- Vendor Styles including: Font Icons, Plugins, etc.-->
        <link rel="stylesheet" media="screen" href="{{ asset('vendor/simplebar/dist/simplebar.min.css') }}"/>
        <link rel="stylesheet" media="screen" href="{{ asset('vendor/tiny-slider/dist/tiny-slider.css') }}"/>

        <!-- Main Theme Styles + Bootstrap-->
        <link rel="stylesheet" media="screen" href="{{ asset('css/theme.min.css') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="shadow-sm fixed-top">
            <div class="navbar navbar-expand-lg navbar-light bg-light pb-0 pt-1">
                <div class="container">
                    <a class="navbar-brand d-none d-lg-block me-3 flex-shrink-0 p-0" href="{{ path('homepage') }}">
                        <img width="80" src="{{ asset('img/ceska-kruta-logo.svg') }}" alt="Českákrůta.cz"/>
                    </a>
                    <a class="navbar-brand d-lg-none me-2" href="{{ path('homepage') }}">
                        <img width="74" src="{{ asset('img/ceska-kruta-logo.svg') }}" alt="Českákrůta.cz"/>
                    </a>

                        <div class="navbar navbar-expand-lg navbar-light bg-light mt-n2 pt-0 pb-0 px-3 px-lg-0">
                            <div class="container">
                                <div class="collapse navbar-collapse" id="navbarCollapse">
                                    <ul class="navbar-nav">
                                        <li class="nav-item"><a class="nav-link" href="{{ path('homepage') }}">Úvod</a></li>
                                        <li class="nav-item"><a class="nav-link" href="{{ path('about_us') }}">O nás</a></li>
                                        <li class="nav-item"><a class="nav-link" href="{{ path('products') }}">Naše nabídka</a></li>
                                        <li class="nav-item"><a class="nav-link" href="{{ path('delivery_info') }}">Rozvoz</a></li>
                                        <li class="nav-item"><a class="nav-link" href="{{ path('homepage') }}#kontakty">Kontakty</a></li>
                                        <li class="nav-item"><a class="nav-link" href="{{ path('sales_places') }}">Naše prodejny</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>


                    <div class="navbar-toolbar d-flex align-items-center">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <a class="navbar-tool ms-1 ms-lg-0 me-n1 me-lg-2" href="{{ path('login') }}">
                            <div class="navbar-tool-icon-box">
                                <i class="navbar-tool-icon ci-user"></i>
                            </div>
                            <div class="navbar-tool-text ms-n2">Přihlásit se</div>
                        </a>
                        <a class="navbar-tool ms-3" href="{{ path('cart') }}">
                            <div class="navbar-tool-icon-box bg-secondary">
                                <span class="navbar-tool-label">{{ cart.itemsCount }}</span>
                                <i class="navbar-tool-icon ci-cart"></i>
                            </div>
                            <div class="navbar-tool-text"><small>Můj košík</small>{{ cart.totalPrice.amount }} Kč</div>
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <main>
            {% for label, messages in app.flashes %}
                <div class="container mt-4">
                    {% for message in messages %}
                        <div class="alert-dismissible fade show alert alert-{{ label }}" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}

            {% block full_content %}
                <section class="container">
                    {% block content %}{% endblock %}
                </section>
            {% endblock %}
        </main>

        <footer class="bg-secondary mt-4">
            <div class="container py-4">
                <a class="p-2" href="{{ path('homepage') }}">Úvod</a>
                <a class="p-2" href="{{ path('about_us') }}">O nás</a>
                <a class="p-2" href="{{ path('products') }}">Naše nabídka</a>
                <a class="p-2" href="{{ path('delivery_info') }}">Rozvoz</a>
                <a class="p-2" href="{{ path('homepage') }}#kontakty">Kontakty</a>
                <a class="p-2" href="{{ path('sales_places') }}">Naše prodejny</a>
                <a class="p-2" href="{{ path('actuality') }}">Aktuality</a>
                <a class="p-2" href="{{ path('recipes') }}">Recepty</a>
            </div>
        </footer>

        <!-- Vendor scrits: js libraries and plugins-->
        <script src="{{ asset('vendor/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
        <script src="{{ asset('vendor/simplebar/dist/simplebar.min.js') }}"></script>
        <script src="{{ asset('vendor/tiny-slider/dist/min/tiny-slider.js') }}"></script>
        <script src="{{ asset('vendor/smooth-scroll/dist/smooth-scroll.polyfills.min.js') }}"></script>

        <!-- Main theme script-->
        <script src="{{ asset('js/theme.min.js') }}"></script>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
