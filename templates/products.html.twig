{% extends 'base.html.twig' %}

{% block title %}Naše nabídka{% endblock %}

{% block content %}
    <section class="products-list content-section">
        <div class="row">
            <div class="col-md-3 sales-places-nav pe-md-0">
                <ul class="list-unstyled">
                    <li>
                        <a class="active" href="{{ path('products') }}">
                            Maso a uzeniny
                            <i class="ci-arrow-right"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('products_cold') }}">
                            Chlazené krůty a krocani
                            <i class="ci-arrow-down"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('products_cold_calendar') }}">
                            Váhový kalendář
                            <i class="ci-arrow-down"></i>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="products-col col-md-9 ps-md-4 ps-lg-5">
                <h1 class="d-none d-md-block">Maso a uzeniny</h1>

                <div class="row">
                    {% for product in products %}
                        {% if not product.turkeyType %}
                            {{ include('_product_item.html.twig') }}
                        {% endif %}
                    {% endfor %}

                    <div class="col-sm-6 col-md-4 my-3">
                        <a href="{{ path('products_cold') }}">
                            <div class="card shadow card-cold-meat">
                                <span class="image"></span>
                                <div class="card-body py-2">
                                    <h3 class="h4 product-title text-center mt-2">Chlazené krůty</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>

                {{ include('_context_order_next_steps.html.twig') }}
            </div>
        </div>
    </section>

{% endblock %}
